 <!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      /* background-color: #f8f9fa; */
      background-color: rgb(155, 150, 150);
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .login-container {
      width: 340px;
      /* background-color: #fff; */
      background-color: rgb(230, 228, 228);

      padding: 30px 25px;
      border-radius: 10px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    }

    .login-container h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }

    label {
      display: block;
      margin-bottom: 6px;
      font-weight: 500;
      font-size: 14px;
      color: #333;
    }

    input, select, button {
      width: 100%;
      padding: 8px 10px;
      font-size: 14px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-sizing: border-box;
    }

    select {
      background-color: #fff;
    }

    button {
      background-color: #007bff;
      color: white;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #0056b3;
    }

    .form-group {
      margin-bottom: 15px;
    }
  </style>
  <script>
    function toggleFields() {
      const role = document.getElementById('role').value;
      const emailField = document.getElementById('emailField');
      const passwordField = document.getElementById('passwordField');

      if (role === 'Anonymous') {
        emailField.style.display = 'none';
        passwordField.style.display = 'none';
      } else {
        emailField.style.display = 'block';
        passwordField.style.display = 'block';
      }
    }

    window.onload = toggleFields;
  </script>
</head>
<body>
  <!-- <div class="top-text">
    <h1>Welcome to the Complaint Management System</h1>
    <p>Please select your role and login to continue.</p>
  </div> -->
  <div class="top-text">
    <h1 class="main-heading"><i>Welcome to Our Complaint Management System</i></h1>
    <p class="sub-text">Please select your role and login to continue.</p>
  </div>

  <div class="login-container">
    <h2>Login</h2>
    <form method="POST" action="/login">
      <div class="form-group">
        <label for="role">Select Role</label>
        <select id="role" name="role" onchange="toggleFields()">
          <option value="DSW">DSW Admin</option>
          <option value="Faculty">Faculty Admin</option>
          <option value="Dept">Dept Admin</option>
          <option value="Anonymous">Anonymous</option>
          <option value="Series">Series User</option>
          <option value="DeptUser">Dept User</option>
        </select>
      </div>

      <div class="form-group" id="emailField">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Enter email">
      </div>

      <div class="form-group" id="passwordField">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter password">
      </div>

      <button type="submit">Login</button>
    </form>
  </div>
  <div class="bottom-text">
    <!-- <p class="info-text"><b>If you face any issues, please contact the admin office.</b></p>
    <p class="info-text2">Note: Anonymous users do not need to provide email/password.</p> -->
    <h2 class="main-heading1"><i>If you face any issues, please contact the admin office.</i></h1>
    <p class="sub-text1">Note: Anonymous users do not need to provide email/password.</p>

  </div>  

</body>
</html>
