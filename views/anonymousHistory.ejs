<!DOCTYPE html>
<html>
<head>
  <title>Previous Complaints</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      /* background-color: #f4f6f8; */
      background-color: rgb(155, 150, 150);

      padding: 50px 20px;
      display: flex;
      justify-content: center;
    }

    .history {
      max-width: 850px;
      width: 100%;
      /* background-color: #ffffff; */
      background-color: rgb(230, 228, 228);

      padding: 40px;
      border-radius: 10px;
      box-shadow: 0 0 18px rgba(0, 0, 0, 0.06);
    }

    h2 {
      text-align: center;
      color: #2c3e50;
      font-size: 26px;
      margin-bottom: 30px;
    }

    .complaint-box {
      background-color: #fafafa;
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 20px;
    }

    .complaint-box p {
      font-size: 15px;
      color: #333;
      margin: 6px 0;
    }

    .label {
      font-weight: 600;
      color: #2c3e50;
    }

    em {
      color: #888;
    }

    .back-link {
      display: block;
      text-align: center;
      margin-top: 30px;
      font-size: 14px;
      /* color: #555; */
      text-decoration: none;
    }

    .back-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="history">
    <h2><i>All Submitted Complaints  </i></h2>

    <% if (complaints.length === 0) { %>
      <p style="text-align:center; color:#777;">No complaints submitted yet.</p>
    <% } else { %>
      <% complaints.forEach(c => { %>
        <div class="complaint-box">
          <p><span class="label">Complaint to:</span> <%= c.receiverRole %></p>
          <p><span class="label">Date:</span> <%= new Date(c.date).toLocaleString() %></p>
          <p><span class="label">Message:</span> <%= c.message %></p>

          <% if (c.response && c.response.message) { %>
            <p><span class="label">Response:</span> <%= c.response.message %></p>
            <p><span class="label">Responded by:</span> <%= c.response.responder %> on <%= new Date(c.response.date).toLocaleString() %></p>
          <% } else { %>
            <p><em>Awaiting response...</em></p>
          <% } %>
        </div>
      <% }) %>
    <% } %>

    <a class="back-link" href="/dashboard">← Back to Dashboard</a>
  </div>
</body>
</html>
