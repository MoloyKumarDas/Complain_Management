<!DOCTYPE html>
<html>
<head>
  <title>Admin - View Complaints</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      /* background-color: #f4f6f8; */
      background-color: rgb(155, 150, 150);

      display: flex;
      justify-content: center;
      padding: 50px 20px;
    }

    .complaints {
      max-width: 900px;
      width: 100%;
      /* background-color: #ffffff; */
      background-color: rgb(230, 228, 228);

      padding: 40px;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.06);
    }

    h2 {
      text-align: center;
      color: #2c3e50;
      font-size: 26px;
      margin-bottom: 30px;
    }

    .complaint-box {
      background-color: #fafafa;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 25px;
    }

    .complaint-box p {
      font-size: 15px;
      color: #333;
      margin: 8px 0;
    }

    .complaint-box .label {
      font-weight: 600;
      color: #2c3e50;
    }

    textarea {
      width: 100%;
      height: 90px;
      padding: 10px;
      font-size: 14px;
      border: 1px solid #ccc;
      border-radius: 6px;
      resize: vertical;
      margin-top: 10px;
    }

    button {
      background-color: #5c6bc0;
      color: white;
      padding: 10px 20px;
      border: none;
      font-size: 14px;
      border-radius: 6px;
      cursor: pointer;
      margin-top: 12px;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #3f51b5;
    }

    .back-link {
      display: block;
      text-align: center;
      margin-top: 40px;
      font-size: 14px;
      /* color: #555; */
      text-decoration: none;
    }

    .back-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="complaints">
    <h2>Complaints for <%= user.role %></h2>

    <% complaints.forEach(c => { %>
      <div class="complaint-box">
                <!-- <p><strong>From:</strong> <%= c.senderEmail %></p> -->
        <!-- <p><strong>From:</strong> <%= c.senderEmail.includes('anonymous') ? 'Anonymous' : c.senderEmail %></p> -->
        <!-- <p><strong>From:</strong> 
          <%= c.senderEmail && !c.senderEmail.includes('@') ? 'Anonymous' : c.senderEmail %>
        </p> -->

        <p><span class="label">From:</span> <%= c.senderEmail?.includes('@') ? c.senderEmail : 'Anonymous' %></p>
        <p><span class="label">Date:</span> <%= new Date(c.date).toLocaleString() %></p>
        <p><span class="label">Message:</span> <%= c.message %></p>

        <% if (!c.response || !c.response.message) { %>
          <form action="/complaints/respond/<%= c._id %>" method="POST">
            <label for="response"><span class="label">Your Response:</span></label>
            <textarea name="message" placeholder="Write your response..." required></textarea>
            <button type="submit">Send Response</button>
          </form>
        <% } else { %>
          <p><span class="label">Response:</span> <%= c.response.message %></p>
          <p><span class="label">Responded on:</span> <%= new Date(c.response.date).toLocaleString() %></p>
        <% } %>
      </div>
    <% }) %>

    <a class="back-link" href="/dashboard">← Back to Dashboard</a>
  </div>
</body>
</html>
